<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.spzx.manager.mapper.SysUserMapper">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,username userName ,password,name,phone,avatar,description,status,create_time,update_time,is_deleted
    </sql>

<!--    分页查询-->
    <select id="findByPage"  resultType="com.atguigu.spzx.model.entity.system.SysUser">
        select <include refid="columns" />
            from sys_user
        <where>
          <if test="keyword != null and keyword !=''">
              and username like concat('%',#{keyword},'%')
          </if>
          <if test="createTimeBegin != null and createTimeBegin != ''">
              and create_time > #{createTimeBegin}
          </if>
          <if test="createTimeEnd != null and createTimeEnd !=''">
              and  #{createTimeEnd} > create_time
          </if>
            and is_deleted = 0
        </where>
    </select>
    <!--根据用户名查询-->
    <select id="selectUserInfoByUserName"  resultType="com.atguigu.spzx.model.entity.system.SysUser">
        SELECT
            u.id,
            u.username,
            u.password,
            u.name,
            u.phone,
            u.avatar,
            u.description,
            u.status,
            u.create_time,
            u.update_time,
            u.is_deleted,
            r.role_code
        FROM sys_user u
                 LEFT JOIN sys_user_role ur ON u.id = ur.user_id
                 LEFT JOIN sys_role r ON ur.role_id = r.id
        WHERE u.username = #{userName}
    </select>

    <!-- 新增用户-->
    <insert id="saveSysUser">
        insert into sys_user(
            username,
            password,
            name,
            phone,
            avatar,
            description,
            status
        )values (
                            #{userName},
                            #{password},
                            #{name},
                            #{phone},
                            #{avatar},
                            #{description},
                            #{status}
                        )
    </insert>
        <!--修改用户-->
    <update id="updateSysUser">
        update sys_user set
        <if test="userName !='' and userName !=null">
            username = #{userName},
        </if>
        <if test="password !='' and password !=null">
            password = #{password},
        </if>
        <if test="name !='' and name !=null">
            name = #{name},
        </if>
        <if test="phone !='' and phone !=null">
            phone= #{phone},
        </if>
        <if test="avatar !='' and avatar !=null">
            avatar= #{avatar},
        </if>
        <if test="description !='' and description !=null">
            description= #{description},
        </if>
        <if test="status !='' and status !=null">
            status= #{status},
        </if>
        update_time = now()
        where
            id = #{id}
    </update>
<!--     删除用户-->
    <update id="deleteById">
        update sys_user
        set
            is_deleted = 1,
            update_time = now()
            where
                id = #{id}
    </update>
</mapper>